.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.input-group {
  margin: 20px 0;
}

.name-input {
  flex: 1;
  border-bottom: 1px solid #eee;
  padding: 12px;
  border-radius: 6px;
  text-align: center;
  font-size: 16px;
  outline: none;
}

.items-input {
  height: 400px;
  width: 300px;
  padding: 12px;
  text-align: center;
  white-space: pre-line;
  border: 1px solid #eee;
  border-radius: 8px;
  background: #f8f8f8;
  overflow-y: auto;
}

.bottom-view {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: rgba(255,255,255,0.95);
  backdrop-filter: blur(8px);
  display: flex;
  justify-content: center;
}

.create-save-update-btn {
  background: #4CAF50;
  color: white;
  margin: 20px;
  border-radius: 8px;
  width: 80px;
}

button {
  transition: all 0.2s ease;
  transform: translateZ(0);
}

button:active {
  transform: scale(0.96);
  opacity: 0.9;
}
