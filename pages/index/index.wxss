/* index.wxss */
/* 基础样式 */
.container {
  padding: 20rpx;
  background-color: #f5f7fa;
  min-height: 100vh;
}

/* 头部样式 */
.header {
  padding: 30rpx 0;
  border-bottom: 2rpx solid #e1e4e8;
  margin-bottom: 40rpx;
}
.title {
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50;
  text-align: center;
}

/* 任务列表容器 */
.task-list {
  margin-bottom: 100rpx;
}

/* 任务项通用样式 */
.task-item {
  position: relative;
  background: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  padding: 24rpx 160rpx 24rpx 90rpx;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.05);
  transition: all 0.3s ease;
}

/* 固定定位元素 */
.fixed-left {
  position: absolute;
  left: 20rpx;
  top: 24rpx;
}
.fixed-right {
  position: absolute;
  right: 20rpx;
  top: 24rpx;
  display: flex;
  gap: 10rpx;
  align-items: center;
}

/* 中间内容区域 */
.auto-width-content {
  width: 100%;
}
.task-title {
  font-size: 32rpx;
  color: #34495e;
  font-weight: 500;
  display: block;
  margin-bottom: 15rpx;
}

/* 进度条样式 */
.progress-container {
  margin-top: 20rpx;
}
.progress-bar {
  height: 12rpx;
  background: #ebedf0;
  border-radius: 8rpx;
  overflow: hidden;
}
.progress {
  height: 100%;
  background: linear-gradient(90deg, #6ab0f3, #4a90e2);
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

/* 完成状态样式 */
.task-item.completed,
.subtask-item.completed {
  background-color: #e8f5e9 !important;
}
.completed .task-title,
.completed text {
  text-decoration: line-through;
  color: #666 !important;
}

/* 删除状态样式 */
.deleted-task,
.deleted-subtask {
  background-color: #e8f5e9 !important;
  padding: 20rpx 30rpx !important;
}
.deleted-task text,
.deleted-subtask text {
  width: 100%;
  display: block;
  margin-bottom: 20rpx;
  color: #999 !important;
}
.action-buttons {
  display: flex;
  gap: 20rpx;
  width: 100%;
  justify-content: flex-end;
}

/* 子任务样式 */
.subtask-item {
  margin: 5rpx 0;
}
.subtask-normal {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 12rpx;
  border-radius: 8rpx;
}
.subtask-normal text {
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

/* 按钮通用样式 */
button {
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  line-height: 1.5;
  transition: all 0.2s ease;
  background-color: #f8f9fb;
  color: #4a4a4a;
}
button::after { border: none }

/* 特殊按钮样式 */
.delete-btn {
  background-color: #ff6b6b;
  color: white;
}
.sub-delete-btn {
  padding: 4rpx 16rpx;
  font-size: 24rpx;
}
.icon-btn {
  min-width: 60rpx;
  padding: 0;
  background: transparent;
}
.add-btn {
  background: #4a90e2;
  color: white;
  padding: 24rpx 80rpx;
  border-radius: 40rpx;
  font-size: 32rpx;
  box-shadow: 0 8rpx 20rpx rgba(74,144,226,0.3);
}

/* 输入框样式 */
.new-subtask {
  display: flex;
  gap: 10rpx;
}
.new-subtask input {
  flex: 1;
  border: 1rpx solid #ddd;
  border-radius: 8rpx;
  padding: 12rpx 20rpx;
  font-size: 28rpx;
}

/* 复选框美化 */
checkbox .wx-checkbox-input {
  border-radius: 50%;
  width: 40rpx;
  height: 40rpx;
}
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #4a90e2;
  border-color: #4a90e2;
}

/* 交互优化 */
button:active {
  transform: scale(0.96);
}
.task-item:active {
  transform: scale(0.99);
}