/* index.wxss */
.container {
  padding: 20rpx;
  height: 100vh;
  background: #f0faf2; /* 浅绿色背景 */
}

.title {
  text-align: center;
  font-size: 36rpx;
  font-weight: 600;
  color: #2c3e50; /* 深灰色文字 */
  padding: 30rpx 0;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  position: relative; /* 为箭头定位 */
  display: flex;
  align-items: center;
  justify-content: center;
}

.title-arrow {
  position: absolute;
  right: 20rpx; /* 距离右侧 20rpx */
  top: 50%;
  transform: translateY(-50%); /* 垂直居中 */
  font-size: 32rpx;
  color: #4caf50; /* 绿色箭头 */
  padding: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
}

.list-container {
  height: calc(100vh - 160rpx);
}

.parent-item {
  background: #e0f7e9; /* 浅绿色卡片背景 */
  margin-bottom: 10rpx;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: all 0.3s ease;
}

.item-content {
  padding: 10rpx 40rpx;
  font-size: 32rpx;
  color: #34495e; /* 深灰色文字 */
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.child-item {
  padding: 20rpx 60rpx;
  font-size: 28rpx;
  color: #556b6e; /* 灰绿色文字 */
  background: #d0efe0; /* 稍深的浅绿色背景 */
  border-top: 1rpx solid #c0e0d0; /* 浅绿色边框 */
  transition: all 0.3s ease;
}

.arrow-btn {
  font-size: 32rpx;
  color: #4caf50; /* 绿色箭头 */
  padding: 20rpx;
  margin-right: -10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 60rpx;
  height: 60rpx;
  transition: transform 0.3s ease;
}

/* 动态效果 */
.parent-item:active {
  transform: scale(0.98);
}

.child-item:active {
  background: #c0e0d0; /* 点击时背景色加深 */
}