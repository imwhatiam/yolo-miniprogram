/* 全局容器样式 */
.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 20rpx;
}

/* 头部样式 */
.header {
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
  margin-bottom: 20rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

/* 任务列表整体样式 */
.task-list {
  margin: 20rpx 0;
}

/* 单个任务项容器 */
.task-item {
  margin: 20rpx 0;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  overflow: hidden;
}

/* 任务头部布局 */
.task-header {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  position: relative;
}

/* 固定左侧复选框区域 */
.fixed-left {
  width: 60rpx;
  position: absolute;
  left: 10rpx;
  display: flex;
  align-items: center;
}

checkbox {
  transform: scale(0.8);
}

/* 自适应宽度内容区域 */
.auto-width-content {
  flex: 1;
  margin-left: 70rpx; /* 复选框区域60rpx + 10rpx间距 */
  margin-right: 150rpx; /* 右侧按钮区域140rpx + 10rpx间距 */
}

.task-title {
  font-size: 32rpx;
  color: #333;
  word-break: break-all;
}

/* 固定右侧按钮区域 */
.fixed-right {
  width: 140rpx;
  position: absolute;
  right: 10rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.icon-btn {
  width: 50rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  background-color: #f0f0f0;
  border-radius: 50%;
  margin-right: 10rpx;
  color: #666;
  border: none;
}
.delete-btn {
  width: 80rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  background-color: #ff4d4f;
  color: #fff;
  border-radius: 25rpx;
  border: none;
}

/* 进度条样式 */
.progress-container {
  margin-top: 10rpx;
}

.progress-bar {
  width: 100%;
  height: 12rpx;
  background-color: #e9ecef;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress {
  height: 100%;
  background: linear-gradient(90deg, #69b1ff, #4096ff);
  transition: width 0.3s ease;
}

/* 已删除任务样式 */
.deleted-task {
  padding: 20rpx;
  background-color: #fff3f3;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.deleted-task text {
  color: #999;
  font-size: 28rpx;
}

.deleted-task button {
  font-size: 24rpx;
  height: 48rpx;
  line-height: 48rpx;
  margin-left: 10rpx;
  border-radius: 24rpx;
  padding: 0 20rpx;
}

.deleted-task button:first-child {
  background-color: #ff4d4f;
  color: #fff;
}

.deleted-task button:last-child {
  background-color: #d9d9d9;
  color: #666;
}

/* 子任务列表样式 */
.subtask-list {
  padding: 0 70rpx 20rpx 70rpx; /* 与主任务对齐 */
  border-top: 1rpx solid #f0f0f0;
  transition: max-height 0.3s ease; /* 平滑展开/收起 */
}

.subtask-item {
  margin: 15rpx 0;
}

.subtask-normal,
.deleted-subtask {
  display: flex;
  align-items: center;
}

.subtask-normal text,
.deleted-subtask text {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  margin-left: 20rpx;
}

.subtask-normal button,
.deleted-subtask button {
  font-size: 24rpx;
  height: 44rpx;
  line-height: 44rpx;
  border-radius: 22rpx;
  padding: 0 15rpx;
}

.deleted-subtask {
  background-color: #fff3f3;
  padding: 10rpx;
  border-radius: 8rpx;
}

.deleted-subtask text {
  color: #999;
}

/* 新增子任务区域 */
.new-subtask {
  padding: 20rpx 70rpx;
  display: flex;
  align-items: center;
  border-top: 1rpx solid #f0f0f0;
}

.new-subtask input {
  flex: 1;
  height: 60rpx;
  background-color: #f9f9f9;
  border-radius: 30rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.new-subtask button {
  width: 100rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: linear-gradient(90deg, #69b1ff, #4096ff);
  color: #fff;
  font-size: 28rpx;
  border-radius: 30rpx;
}

/* 底部添加按钮 */
.footer {
  padding: 20rpx 0;
}

.add-btn {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  background: linear-gradient(90deg, #69b1ff, #4096ff);
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  margin: 0 auto;
  display: block;
}