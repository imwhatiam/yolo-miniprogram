.container {
  padding: 10px;
}

.header {
  text-align: center;
  margin-bottom: 20px;
}

.title {
  font-size: 24px;
  font-weight: bold;
}

.task-list {
  margin-bottom: 20px;
}

.task-item {
  /* border: 1px solid rgb(190, 27, 27); */
  padding: 10px;
  margin-bottom: 10px;
}

.task-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.task-title {
  flex: 1;
}

.progress-bar {
  position: relative;
  width: 100px;
  height: 10px;
  background-color: #eee;
  margin: 0 10px;
}

.progress {
  height: 100%;
  background-color: #4caf50;
}

.progress-text {
  position: absolute;
  top: -20px;
  left: 0;
  font-size: 12px;
}

.subtask-list {
  margin-top: 10px;
  padding-left: 20px;
}

.subtask-item {
  margin-bottom: 5px;
}

.deleted-task, .deleted-subtask {
  background-color: red;
  padding: 10px;
  color: #fff;
}

.footer {
  text-align: center;
  margin-top: 20px;
}
.new-subtask {
  display: flex;
  align-items: center;
  margin-top: 5px;
}
.new-subtask input {
  flex: 1;
  border: 1px solid #ccc;
  padding: 5px;
  margin-right: 5px;
}
